/* pages/preview/preview.wxss */
page{
  background-color: #fff;
}
.quesNaire{
  border-color: black;
  border-style: dashed none none none;
  border-width: 3rpx;
  padding: 0 37.5rpx;
}
.quesNaireName{
  font-size: 45rpx;
  font-weight: bold;
  margin: 30rpx 0;
}
.explain{
  font-size: 28rpx;
}
.quesions{
  margin: 70rpx 0 0 0;
}
.quesion{
  font-size: 40rpx;
  border-width: 1rpx;
  border-style: none none dashed none;
  border-color:  gray;
  padding: 40rpx 0;
}
.key{
  position: relative;
  left: 30rpx;
}
.simple{
  border:1rpx black solid;
  padding: 20rpx;
  height: 200rpx;
}
.submit{
  width: 400rpx;
  background: #09BB07;
  color: white;
  position: relative;
  top: 40rpx;
  border-radius: 98rpx;
  margin: 0 auto 100rpx auto;
}
radio{
  display: block;
}
radio .wx-radio-input{
    border-radius: 50%; 
    width: 25rpx;
    height: 25rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%; 
  width: 25rpx;
  height: 25rpx;
  display: none;
}
checkbox{
  display: block;
}
checkbox .wx-checkbox-input{
  width: 25rpx;
  height: 25rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  color: #09BB07;
  background: #09BB07;
}

